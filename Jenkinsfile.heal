pipeline {
    agent any

    stages {
        stage('Run Healing') {
            steps {
                script {
                    // Run the healing script
                    sh './jenkins-heal.sh'
                }
            }
        }
    }

    post {
        success {
            echo 'Healing successful!'
        }
        failure {
            echo 'Healing failed!'
        }
    }
}